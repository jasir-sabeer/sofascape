  <section class="confirmation_part padding_top">
 
    <div class="container">
      <h2>Order Details</Details></h2>
      <div class="row">
        <div class="col-lg-12">
        </div>
        <div class="col-lg-6 col-lx-4">
          <div class="single_confirmation_details">
            <h4>order info</h4>
            <ul>
              <li>
                <p>order id</p><span>:<%= orders.orderId %></span>
              </li>
              <li>
                <p>date</p><span>:<%= new Date(orders.createdAt).toLocaleDateString() %></span>
              </li>
              <li>
                <p>total</p><span>:<%= orders.total %> </span>
              </li>
              <li>
                <% if(orders.paymentMethod=='COD'){%>
                <p>Pmayment methord</p><span>:Cash on Delivery</span>
                <%}else{%>
                <p>Pmayment methord</p><span>:<%=orders.paymentMethod%></span>
                <%}%>
              </li>
            </ul>
          </div>
        </div>
     
        <div class="col-lg-6 col-lx-4">
          <div class="single_confirmation_details">
            <h4>shipping Address</h4>
            <ul>
              <li>
                <p>Street</p><span>:<%= orders.address.street%></span>
              </li>
              <li>
                <p>city</p><span>:<%= orders.address.city%></span>
              </li>
              <li>
                <p>State</p><span>: <%= orders.address.state%></span>
              </li>
              <li>
                <p>pincode</p><span>: <%= orders.address.pincode%></span>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="order_details_iner">
            <h3>Order Details</h3>
            <table class="table table-borderless">
              <thead>
                <tr>
                  <th scope="col" colspan="2">Product</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Amount</th>
                </tr>
              </thead>
             
              <tbody>
                <% orders.products.forEach(product => { %>
                <tr>
                  <th colspan="2"><span><%= product.name %></span></th>
                  <th>x<%= product.quantity %></th>
                  <% if(product.status==='Cancelled'){%>
                    <th> <span>Cancelled</span></th>

                  <%}else{%>
                  <%if(product.offerPrice ){%>
                    <th> <span>₹<%= product.offerPrice * product.quantity %></span></th>
                    <%}else{%>
                      <th> <span>₹<%= product.price * product.quantity %></span></th>
                    <%}%>
                    <%}%>
                  
                </tr>
                <%})%>
                <tr>
                  <th colspan="3">Subtotal</th>
                  <th> <span></span>₹<%= orders.subtotal%></th>
                </tr>
                <tr>
                  <th colspan="3">shipping</th>
        
                  <th><span>₹<%= orders.shippingCost%></span></th>
                 
              </tr>
              <%if(orders.couponDiscountValue){%>
                <tr>
                <th colspan="3">Total</th>
                <th><span>₹<%= orders.total%></span></th>
               </tr>
               <tr>
                <th colspan="3">Coupon Discount</th>
                <th><span>- ₹<%= orders.couponDiscountValue%></span></th>
              </tr>
              <%}%>
       </tbody>
              
              <tfoot>
                <%if(orders.finalDiscountAmount){%>
                  <tr>
                    <th scope="00col" colspan="3">Total after Discount</th>
                    <th scope="col">₹<%= orders.finalDiscountAmount%></th>
                  </tr>
                  <%}else{%>
                    <tr>
                      <th scope="00col" colspan="3">Total</th>
                      <th scope="col">₹<%= orders.total%></th>
                    </tr>
                    <%}%>   </tfoot>
            </table>
          </div>
        </div>
      </div>
    </div>
    <a href="/orderTable" id="btn" class="genric-btn default circle">Back To Orders</a>
  </section>
