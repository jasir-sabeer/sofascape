<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="style.css">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
        }

        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
        }

        .profile-section, .address-section {
            background-color: #fff;
            border-radius: 8px;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 50px auto;
            margin-top: 4cm;
        }

        .profile-header, .address-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        h2 {
            font-size: 24px;
            color: #333;
        }

        .logout-button, .add-address-button, .edit-button, .delete-button, .change-password-button {
            background-color: #4CAF50;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
        }

        .logout-button {
            background-color: #ff6b6b;
        }

        .logout-button:hover {
            background-color: #e55a5a;
        }

        .change-password-button {
            background-color: #4CAF50;
        }

        .change-password-button:hover {
            background-color: #45a049;
        }

        
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            width: 80%;
            max-width: 400px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .modal-header, .modal-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .modal-header h2 {
            font-size: 20px;
            color: #333;
        }

        .modal-footer button {
            padding: 10px;
            font-size: 14px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .close-button {
            color: rgb(20, 12, 12);
            border: none;
            background-color: #fff;
        }


        .cancel-button{
            background-color: #ff6b6b;
            color: white;
        }

        .cancel-button:hover{
            background-color: #e55a5a;
        }
        

        .save-button {
            background-color: #4CAF50;
            color: white;
        }

        .save-button:hover {
            background-color: #45a049;
        }

        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
    </style>
</head>
<body>

<%- include("../../views/partials/user/header") %>

<section class="profile-section">
    <div class="container">
        <div class="profile-header">
            <h2>User Profile</h2>
            <form action="/userlogout" method="post">
                <button class="logout-button">Logout</button>
            </form>
        </div>

        <div class="profile-info">
            <h3>General Information</h3>
            <p><strong>Username:</strong> <%= users.name %></p>
            <p><strong>Email:</strong> <%= users.email %></p>
            <p><strong>Phone:</strong> <%= users.phone %></p>
            <!-- Change Password Button -->
             <a href="/changePassword">
            <button class="change-password-button">Change Password</button>
            </a>
        </div>
    </div>
</section>


<section class="address-section">
    <div class="container">
        <div class="address-header">
            <h2>Manage Addresses</h2>
            <button class="add-address-button" onclick="addNewAddress()">Add New Address</button>
        </div>

        <div class="address-list">
            <% addresses.forEach(address => { %>
                <div class="address-item">
                    <p><strong>Street:</strong> <%= address.street %></p>
                    <p><strong>City:</strong> <%= address.city %></p>
                    <p><strong>State:</strong> <%= address.state %></p>
                    <p><strong>Zip Code:</strong> <%= address.pincode %></p>

                    <div class="address-actions">
                        <button class="edit-button" onclick="editAddress('<%= address.id %>')">Edit</button>
                        <button class="delete-button" onclick="deleteAddress('<%= address.id %>')">Delete</button>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>

<%- include("../../views/partials/user/footer") %>

<script>
    
    // Other existing functions for add/edit/delete address
    function addNewAddress() {
        window.location.href = "/add-address";
    }

    function editAddress(addressId) {
        window.location.href = `/edit-address/${addressId}`;
    }

    function deleteAddress(addressId) {
        if (confirm("Are you sure you want to delete this address?")) {
            fetch(`/delete-address/${addressId}`, {
                method: "DELETE",
                headers: {
                    "Content-Type": "application/json"
                }
            }).then(response => {
                if (response.ok) {
                    window.location.reload();
                } else {
                    alert("Failed to delete the address.");
                }
            }).catch(error => {
                console.error("Error deleting address:", error);
            });
        }
    }
</script>

</body>
</html>
