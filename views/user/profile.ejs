<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="style.css">
    <style>
      /* Your existing CSS styles */
      /* ... */
    </style>
</head>
<body>

<%- include("../../views/partials/user/header") %>

<section class="profile-section">
    <div class="container">
        <div class="profile-header">
            <h2>User Profile</h2>
            <form action="/userlogout" method="post">
                <button class="logout-button">Logout</button>
            </form>
        </div>
        
        <div class="profile-info">
            <h3>General Information</h3>
            <p><strong>Username:</strong> jasir</p>
            <p><strong>Email:</strong> jasir@gmail.com</p>
            <p><strong>Phone:</strong> 12234567667667</p>
        </div>
    </div>
</section>

<section class="address-section">
    <div class="container">
        <div class="address-header">
            <h2>Manage Addresses</h2>
            <button class="add-address-button" onclick="addNewAddress()">Add New Address</button>
        </div>

        <!-- Address List -->
        <div class="address-list">
            <!-- Loop through addresses -->
            <% addresses.forEach(address => { %>
                <div class="address-item">
                    <p><strong>Street:</strong> <%= address.street %></p>
                    <p><strong>City:</strong> <%= address.city %></p>
                    <p><strong>State:</strong> <%= address.state %></p>
                    <p><strong>Zip Code:</strong> <%= address.zipCode %></p>

                    <div class="address-actions">
                        <button class="edit-button" onclick="editAddress('<%= address.id %>')">Edit</button>
                        <button class="delete-button" onclick="deleteAddress('<%= address.id %>')">Delete</button>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>

<%- include("../../views/partials/user/footer") %>

<script>
    // Function to add a new address
    function addNewAddress() {
        window.location.href = "/add-address";
    }

    // Function to edit an existing address
    function editAddress(addressId) {
        window.location.href = `/edit-address/${addressId}`;
    }

    // Function to delete an address
    function deleteAddress(addressId) {
        if (confirm("Are you sure you want to delete this address?")) {
            fetch(`/delete-address/${addressId}`, {
                method: "DELETE",
                headers: {
                    "Content-Type": "application/json"
                }
            }).then(response => {
                if (response.ok) {
                    window.location.reload();
                } else {
                    alert("Failed to delete the address.");
                }
            }).catch(error => {
                console.error("Error deleting address:", error);
            });
        }
    }
</script>

</body>
</html>
