                    <a href="/admin/editOfferPage/<%= offer._id %> %>"><button class="btn" > Edit </button></a>
                   </td>
                      <td>
                        <form action="/admin/offer/remove/<%= offer._id %>?_method=DELETE" method="POST"
                            onsubmit="return confirmAndRemoveOffer('<%= offer._id %>')">
                          <button class="btn" style="margin-top: .4cm;">Remove</button>
                      </form>
                      </td>
                      <td><a href="/admin/viewMore/<%= offer._id %> %>"><button style="background-color: rgb(210, 181, 17);block-size: 40px;border: none;color: #fff;">
                      View More
                    </button></a>
                    </td>
                    
                  </tr>
                  <%})%>
                
                
    
    
